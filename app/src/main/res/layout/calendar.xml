<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/calendar_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_showOtherDates="all"
        app:mcv_firstDayOfWeek="monday"
        app:mcv_selectionColor="#42A5F5"
        app:mcv_arrowColor="#000000"
        app:mcv_dateTextAppearance="@android:style/TextAppearance.Material.Medium" />

    <TextView
        android:id="@+id/text_selected_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="날짜를 선택하세요"
        android:textSize="16sp"
        android:paddingTop="20dp"
        android:paddingBottom="8dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_books_on_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="해당 날짜의 독서 기록이 여기에 표시됩니다."
        android:textSize="14sp" />
</LinearLayout>